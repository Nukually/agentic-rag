# OpenAI-compatible base URL, e.g. https://api.openai.com/v1
LLM_API_URL=

# Model name, e.g. gpt-4o-mini
LLM_MODEL=

# API key
LLM_API_KEY=

# Optional request timeout seconds
LLM_TIMEOUT=30
LLM_TEMPERATURE=0.2

# Embedding API (OpenAI-compatible)
EMBEDDING_API_URL=
EMBEDDING_API_KEY=
EMBEDDING_MODEL=
EMBEDDING_TIMEOUT=30
EMBEDDING_BATCH_SIZE=64

# Reranker API (OpenAI-style /rerank endpoint)
RERANKER_API_URL=
RERANKER_API_KEY=
RERANKER_MODEL=
RERANKER_TIMEOUT=30

# Milvus (local milvus-lite by default)
MILVUS_URI=./data/index/milvus.db
