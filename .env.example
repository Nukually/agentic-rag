# Local data paths
RAW_DATA_DIR=./knowledge
PROCESSED_DATA_DIR=./data/processed

# Retrieval / chunking
CHUNK_SIZE=1200
CHUNK_OVERLAP=180
RETRIEVAL_TOP_K=8
RETRIEVAL_CANDIDATE_K=64
HYBRID_VECTOR_WEIGHT=0.6
HYBRID_KEYWORD_WEIGHT=0.4

# Agent scale controls
